{
	"manifest_version": 2,
	"name": "维基搜索",
	"description": "选中文本可以右键直接在维基中搜索词条",
	"version": "1.0",
	"permissions": ["contextMenus" ,"tabs"],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["menu.js"]
	},
	"icons": {
		"16": "icon.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	}
}